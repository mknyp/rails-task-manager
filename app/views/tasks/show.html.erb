<h1><%= @task.title %> </h1>
<h2><%= @task.details %></h2>
<h2><%= @task.completed %></h2>

<%= link_to 'Back to list', tasks_path(@tasks)  %>
<%= link_to 'Edit this task', edit_task_path(@task)  %>
<%= link_to 'Delete this task', delete_path(@task), method: :delete, data: {confirm: 'Are you sure you want to delete?'} %>


